<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/matchLength"
        android:gravity="right"
        android:textAlignment="gravity"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:width="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seconds per point"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/secondsPerPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Match length"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/matchLength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seconds per move"
        android:id="@+id/textView3"
        android:layout_below="@+id/secondsPerPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secondsPerPoint"
        android:gravity="right"
        android:textAlignment="gravity"
        android:layout_below="@+id/matchLength"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/matchLength"
        android:layout_alignStart="@+id/matchLength" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secondsPerMove"
        android:textAlignment="gravity"
        android:gravity="right"
        android:layout_below="@+id/secondsPerPoint"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/secondsPerPoint"
        android:layout_alignStart="@+id/secondsPerPoint" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/button"
        android:onClick="startButtonOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="24dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/button">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:text="New Button"
        android:id="@+id/player1"
        android:padding="12dip"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="player1ButtonOnClick"
        android:textSize="48dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:text="New Button"
        android:id="@+id/player2"
        android:padding="12dip"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="player2ButtonOnClick"
        android:textSize="48dp" />
    </LinearLayout>

</RelativeLayout>
